{
    "compilerOptions": {
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "pretty": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@naya/*": [
                "packages/*"
            ]
        },
        "target": "ES2020"
    }
}
